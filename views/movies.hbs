<div class="moviesMainContainer container">
    <h1>Ironhack Cinema</h1>
    <p>Click on the movie to see the showtimes!</p>
    <div class="movieContainer container">
        {{#each movies}}
            <div class="card-body text-center" style="width: 18rem;">
                <img src={{this.image}} alt="movie poster">
                <p>{{this.title}}</p>
                <a href="/movies/{{this._id}}">See more</a>
            </div>
        {{/each}}
    </div>
</div>
